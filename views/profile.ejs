<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="w-full flex justify-end" >
            <a class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block " href="/logout">Logout</a>
        </div>


       <div class="flex items-start gap-3">
        <div class="w-20 h-20 bg-red-500 rounded-md overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="">
        </div>
        <h3 class="text-3xl "><span class="font-light">Hello </span>, <%= user.name %> </h3> 
       </div>


       <h5 class="mb-5 mt-3">You can create a new post...</h5>
       <form method="post" action="/post">
        <textarea  placeholder="whats on your mind ?." class="block w-1/3 resize-none bg-transparent border-2 border-zinc-800 p-3 outline-none rounded-md "  name="content" ></textarea>
        <input class="px-3 w-40 py-2 bg-blue-500 text-sm block rounded-md mt-2" type="submit" value="Create new post">
       </form>
        <div class="posts mt-20 ">
            <h3 class="text-zinc-400">Your Posts..</h3>
            <div class="postcontainer mt-5 flex flex-wrap ml-3 gap-4">
                <% user.posts.forEach(function(post){ %>

                <div class="post w-1/3 p-5  mb-4 rounded-md border-2 border-zinc-800">
                    <h4 class="text-blue-500 mb-2">@<%= user.username %></h4>
                    <p class="text-sm tracking-tight "><%= post.content %></p>
                    <small class="mt-4 inline-block"><%= post.likes.length %> likes</small>
                          <div class="btns flex gap-4 mt-5">
                            <a class="text-blue-500" href="/like/<%= post._id %>">
                                <%= post.likes.indexOf(user._id) ===-1 ? "Like" : "Unlike" %></a>
                            <a class="text-zinc-600" href="/edit/<%= post._id %>">edit</a>
                          </div>
                </div>

